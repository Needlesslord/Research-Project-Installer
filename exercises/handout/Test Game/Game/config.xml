  </map>
  
  <player>
    <position_turorial x="500" y="1111"/>
    <position_scene_1 x="500" y="1111"/>
    <position_scene_2 x="490" y="5800"/>
    <win_position_1 x="4206" y="515"/>
    <win_position_2 x="2394" y="2728"/>
    <size w="14" h="24"/>
    <velocity x="100" y="0"/>
    <max_speed x="300" y="480"/>
    <jump_impulse y="200"/>
    <gravity value="400"/>
    <feet h="1"/>
    <head h="1"/>
    <right_side w="1"/>
